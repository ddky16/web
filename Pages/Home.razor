@page "/"
@inherits HomeBase

<div class="container my-5">
    <div class="row">
        <div class="col-lg-12 col-xl-6">
            <About />
        </div>
        <div class="col-lg-12 col-xl-6">
            @foreach (var portfolio in portfolioList)
            {
                <CardItem _title="@portfolio.Title"
                          _description="@portfolio.Description"
                          _imagePath="@portfolio.ImagePath"
                          _projectLink="@portfolio.Link" />
            }
        </div>
    </div>
</div>